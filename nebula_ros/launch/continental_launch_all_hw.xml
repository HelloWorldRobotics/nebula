<?xml version="1.0"?>
<launch>
    <arg name="sensor_model" default="ARS548"/>
    <arg name="frame_id"  default="continental"/>

    <arg name="odometry_topic" default="odometry_input"/>
    <arg name="acceleration_topic"  default="acceleration_input"/>

    <arg name="sensor_ip" default="10.13.1.114" description="Radar Sensor IP"/>
    <arg name="new_sensor_ip" default="10.13.1.113" description="New Radar Sensor IP"/>
    <arg name="host_ip" default="10.13.1.166" description="Broadcast IP from Sensor"/>
    <arg name="multicast_ip" default="224.0.2.2" description="Multicast Sensor IP"/>
    <arg name="data_port" default="42102" description="Radar Data Port"/>
    <arg name="configuration_host_port" default="42401" description="Radar host configuration port"/>
    <arg name="configuration_sensor_port" default="42101" description="Radar sensor configuration port"/>
    <arg name="use_sensor_time" default="false" description="Whether to use or not the timestamp from the sensor"/>

    <arg name="new_plug_orientation" default="0" description="0=PLUG_RIGHT 1=PLUG_LEFT"/>
    <arg name="new_vehicle_length" default="4.89" description="New vehicle length"/>
    <arg name="new_vehicle_width" default="1.896" description="New vehicle width"/>
    <arg name="new_vehicle_height" default="2.5" description="New vehicle height"/>
    <arg name="new_vehicle_wheelbase" default="2.79" description="New vehicle wheel base"/>
    <arg name="new_radar_maximum_distance" default="301" description="New maximum distance in meters"/>
    <arg name="new_radar_frequency_slot" default="2" description="New frequency slot"/>
    <arg name="new_radar_cycle_time" default="50" description="New cycle time in ms"/>
    <arg name="new_radar_time_slot" default="10" description="New time slot in ms"/>
    <arg name="new_radar_country_code" default="2" description="New country code"/>
    <arg name="new_radar_powersave_standstill" default="0" description="New power saving in standstill"/>

    <node pkg="nebula_ros" exec="continental_ars548_driver_ros_wrapper_node" name="continental_ars548_decoder_driver" output="screen">
        <param name="sensor_model" value="$(var sensor_model)"/>
        <param name="frame_id" value="$(var frame_id)"/>
        <param name="host_ip" value="$(var host_ip)"/>
        <param name="sensor_ip" value="$(var sensor_ip)"/>
        <param name="new_sensor_ip" value="$(var new_sensor_ip)"/>
        <param name="data_port" value="$(var data_port)"/>
        <param name="use_sensor_time" value="$(var use_sensor_time)"/>

        <param name="new_plug_orientation" value="$(var new_plug_orientation)"/>
        <param name="new_vehicle_length" value="$(var new_vehicle_length)"/>
        <param name="new_vehicle_width" value="$(var new_vehicle_width)"/>
        <param name="new_vehicle_height" value="$(var new_vehicle_height)"/>
        <param name="new_vehicle_wheelbase" value="$(var new_vehicle_wheelbase)"/>
        <param name="new_radar_maximum_distance" value="$(var new_radar_maximum_distance)"/>
        <param name="new_radar_frequency_slot" value="$(var new_radar_frequency_slot)"/>
        <param name="new_radar_cycle_time" value="$(var new_radar_cycle_time)"/>
        <param name="new_radar_time_slot" value="$(var new_radar_time_slot)"/>
        <param name="new_radar_country_code" value="$(var new_radar_country_code)"/>
        <param name="new_radar_powersave_standstill" value="$(var new_radar_powersave_standstill)"/>
    </node>

    <node pkg="nebula_ros" exec="continental_ars548_hw_interface_ros_wrapper_node"
          name="continental_ars548_hw_driver" output="screen">
        <remap from="/diagnostics" to="diagnostics"/>
        <remap from="odometry_input" to="$(var odometry_topic)"/>
        <remap from="acceleration_input" to="$(var acceleration_topic)"/>

        <param name="sensor_model" value="$(var sensor_model)"/>
        <param name="frame_id" value="$(var frame_id)"/>
        <param name="host_ip" value="$(var host_ip)"/>
        <param name="multicast_ip" value="$(var multicast_ip)"/>
        <param name="data_port" value="$(var data_port)"/>
        <param name="sensor_ip" value="$(var sensor_ip)"/>
        <param name="new_sensor_ip" value="$(var new_sensor_ip)"/>
        <param name="configuration_host_port" value="$(var configuration_host_port)"/>
        <param name="configuration_sensor_port" value="$(var configuration_sensor_port)"/>
        <param name="use_sensor_time" value="$(var use_sensor_time)"/>
        <param name="new_plug_orientation" value="$(var new_plug_orientation)"/>
        <param name="new_vehicle_length" value="$(var new_vehicle_length)"/>
        <param name="new_vehicle_width" value="$(var new_vehicle_width)"/>
        <param name="new_vehicle_height" value="$(var new_vehicle_height)"/>
        <param name="new_vehicle_wheelbase" value="$(var new_vehicle_wheelbase)"/>
        <param name="new_radar_maximum_distance" value="$(var new_radar_maximum_distance)"/>
        <param name="new_radar_frequency_slot" value="$(var new_radar_frequency_slot)"/>
        <param name="new_radar_cycle_time" value="$(var new_radar_cycle_time)"/>
        <param name="new_radar_time_slot" value="$(var new_radar_time_slot)"/>
        <param name="new_radar_country_code" value="$(var new_radar_country_code)"/>
        <param name="new_radar_powersave_standstill" value="$(var new_radar_powersave_standstill)"/>

        <param name="use_sim_time" value="false"/>
    </node>
</launch>
